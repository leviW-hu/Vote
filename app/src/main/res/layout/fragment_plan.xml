<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.vote.SummaryFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/vote"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/sv_summaryScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/misina" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="Raleway"
                    android:text="Misina ötletbörze"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="Railway"
                        android:text="dr Nagy Géza"
                        android:textColor="@color/blue_main"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#919191"
                        android:orientation="horizontal"></LinearLayout>

                    <TextView
                        android:id="@+id/textView47"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="Segoe UI"
                        android:text="Március 6"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="Pécs Megyei Jogú Város Önkormányzata (mint Kiíró) nyílt ötletbörzét hirdetett a lakosság részére a Misina tető hatékony fejlesztése érdekében. Az ötletbörze célja az volt, hogy a lakosság ne csak általános véleményt tudjon megfogalmazni a fejlesztéssel kapcsolatban, hanem saját ötletével tevékeny részesévé is váljon a hatékony pécsi beruházásoknak.  "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="Mi lesz a Misina-tetőn?"
                    android:textAlignment="center"
                    android:textColor="@color/blue_main"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="Az Ötletbörze keretében a több mint 19 ezer beérkezett szavazatból a legtöbbet (49.16%) az “Aktív Misina” koncepcióterv kapta: egy olyan mozgás- és túraközpont fog megvalósulni a Misina-tetőn, amely a természetjárók és a sportolni vágyók minden igényét kielégíti. A fejlesztéssel minden korosztály megtalálhatja majd itt a számára legideálisabb sportolási vagy mozgási helyszínt. "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="A túraközpont kialakításának célja, hogy új szintre emeljük a Mecseki Parkerdő és a pécsiek, valamint a Pécsre látogatók kapcsolatát.   "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="A baranyai választópolgárok szavazhatnak,"
                    android:textAlignment="center"
                    android:textColor="@color/blue_main"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="hogy a döntőbe bekerült ötletek kötül melyik valósuljon meg. A megválasztott ötlet a városi önkörmányzat segítségével megvalósításra kerül 2023-ig."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>